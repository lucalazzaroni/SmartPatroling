<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:scrollbarStyle="outsideOverlay"
        android:text="Distance threshold"
        android:textColor="#000000"
        android:textColorHighlight="@android:color/background_dark"
        android:textCursorDrawable="@android:color/background_dark"
        android:textSize="30dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="75dp"
        android:background="#f1f1f1"
        android:spinnerMode="dialog" />

    <TextView
        android:textColor="#000000"
        android:layout_marginTop="150dp"
        android:id="@+id/percentage"
        android:textSize="30dp"
        android:text="Percentage error"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="190dp"
        android:background="#f1f1f1"
        android:spinnerMode="dialog"/>

    <ImageButton
        android:id="@+id/bttDone"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/colorTransp"
        android:scaleType="fitCenter"
        android:src="@drawable/spunta"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>