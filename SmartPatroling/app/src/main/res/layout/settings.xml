<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:scrollbarStyle="outsideOverlay"
        android:text="Matching threshold"
        android:textColor="#000000"
        android:textColorHighlight="@android:color/background_dark"
        android:textCursorDrawable="@android:color/background_dark"
        android:textSize="30dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:spinnerMode="dialog"
        android:layout_below="@+id/distance"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="#000000"
        android:layout_marginTop="150dp"
        android:id="@+id/percentage"
        android:textSize="30dp"
        android:text="Precision"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:spinnerMode="dialog"
        android:layout_below="@+id/percentage"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/bttDone"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/spunta"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/bttHelp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/question"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>